                                                <h4 class="name">
                                                    <%=col.name%>
                                                </h4>
                                            </li>
                                            <% } %>
                                                <% }; %>
                                                    <% }; %>
                    </ul>
                </section>
            </section>

        </div>

        <section id="friends">
            <section id="friends_list">
                <h3>Your Friends</h3>
