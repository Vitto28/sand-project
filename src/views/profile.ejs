<div id="profile_container">
    <div id="profile">
        <h1>Your Profile</h1>

        <div id="top_section">

            <section id="user_info_area">

                <div id="pic_and_username">
                    <img id="ppic" src="<%= user.ppic %>">
                    <h1>
                        <%= user.username %>
                    </h1>
                </div>

                <div id="info">
                    <div id="name">
                        <div>
                            <h2>Name:</h2>
                            <p>
                                <%=user.name%>
                            </p>
                        </div>
                        <div>
                            <h2>Surname:</h2>
                            <p>
                                <%=user.surname%>
                            </p>
                        </div>
                    </div>
                    <div id="email">
                        <h2>Email:</h2>
                        <p>
                            <%=user.email%>
                        </p>
                    </div>
                </div>

                <div id="bio">
                    <p>
                        <%= user.bio %>
                    </p>
                </div>

                <button class="button" type="button" id="settings" name="settings"> Settings </button>

            </section>

            <section id="data">
                <section class="profile_data" id="tracking">
                    <h1>Tracking</h1>
                    <ul class="tracking_list">
                        <% if (user.tracking==undefined || user.tracking.length==0) { %>
                            <div class="no_collections">It appears you don't have any</div>
                            <% } else { %>
                                <% for(let i=0; i < 3; i++) { %>
                                    <% if (user.tracking[i] !=undefined) { %>
                                        <% let col=user.tracking[i] %>
                                            <li>
                                                <img src="<%=col.img%>" alt="<%=col.name%>">
                                                <h4 class="name">
                                                    <%=col.name%>
                                                </h4>
                                            </li>
                                            <% } %>
                                                <% }; %>
                                                    <% }; %>
                    </ul>
                    <% if (user.tracking !=undefined && user.tracking.length> 0) { %>
                        <button class="button">See More</button>
                        <% } %>
                </section>
                <section class="profile_data" id="recentlyviewed">
                    <h1>Recently Viewed</h1>
                    <ul class="tracking_list">
                        <% if (user.recentlyviewed==undefined || user.recentlyviewed.length==0) { %>
