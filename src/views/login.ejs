<div class="form-container">

    <section id="title">
        <h1>Welcome back!</h1>
        <h2>Log in to your account to continue to S.A.N.D</h2>
    </section>

    <form method="POST" id="loginForm" action="/login" enctype="multipart/form-data">
        <label for="username">
            <h3>Username</h3>
            <input type="text" name="username" required>
        </label>
        <label for="password">
            <h3>Password</h3>
            <input type="password" name="password" required>
        </label>
        <input class="grow_hover" type="submit" value="Login">
    </form>

    <section id="alternative">
        <h3>Don't have an account yet?</h3>
        <form method="GET" id="signupRedirect" action="/signup">
            <input class="grow_hover" type="submit" value="Sign up">
        </form>
    </section>

</div>