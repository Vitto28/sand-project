<div id="settings_container">

    <div id="settings">

        <h1>Edit Your Profile</h1>

        <section class="settings_section" id="profile_picture">
            <img id="picture" src="images/user1.png" alt="profile">
            <form method="POST" action="/user/settings/<%= result._id %>?req=ppic" enctype="multipart/form-data">
                <div>
                    <label for="upload">
                        <h3>Choose an image to upload</h3>
                        <input type="file" id="file" name="profile_picture" accept="image/*">
                    </label>
                    <button class="button" type="button" id="regenerate_image" name="regenerate_image"> Regenerate Image
                    </button>
                </div>

                <input class="button" type="submit" value="Change profile picture">
            </form>
        </section>

        <section class="settings_section" id="user_info">

            <h2 class="title">Modify your profile information</h1>

                <div>
                    <form method="POST" action="user/settings/<%= result._id %>?req=name" enctype="multipart/form-data">
                        <label for="name">
                            <h3>Name</h3>
                            <input class="input" type="text" name="name" required>
                            <input class="button" type="submit" value="Change name">
                        </label>
                    </form>

                    <form method="POST" action="user/settings/<%= result._id %>?req=surname"
                        enctype="multipart/form-data">
                        <label for="surname">
                            <h3>Surname</h3>
                            <input class="input" type="text" name="surname">
                            <input class="button" type="submit" value="Change surname">
                        </label>
                    </form>

                    <form method="POST" action="user/settings/<%= result._id %>?req=email"
                        enctype="multipart/form-data">
                        <label for="email">
                            <h3>Email address</h3>
                            <input class="input" type="text" name="email" required>
                            <input class="button" type="submit" value="Change email">
                        </label>
                    </form>

                    <form method="POST" action="/user/settings/<%= result._id %>?req=bio&_method=PUT"
                        enctype="multipart/form-data">
                        <label for="bio">
                            <h3>Biography</h3>
                            <input class="input" type="text" name="bio" value="<%= result.bio %>">
                            <input class="button" type="submit" value="Change bio">
                        </label>
                    </form>
                </div>


