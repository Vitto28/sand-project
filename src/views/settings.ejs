            <label for="email">Change email:</label>
            <input type="email" name="email" required value=<%=result.email %>>

                <h2 class="title" >Modify your password</h1> -->

                <section class="settings_section" id="password">
                    <h2 class="title">Modify your password</h1>
                        <form method="POST" action="user/settings/<%= result._id %>?req=password"
                            enctype="multipart/form-data">
                            <label for="old_password">
                                <h3>Old Password</h3>
                                <input class="input" type="text" name="old_password" required>
                            </label>

                            <label for="new_password">
                                <h3>New Password</h3>
                                <input class="input" type="password" name="new_password" required>
                            </label>

                            <label for="confirm_new_password">
                                <h3>Confirm New Password</h3>
                                <input class="input" type="password" name="confirm_new_password" required>
                            </label>

                            <input class="button" type="submit" value="Change password">
                        </form>
                </section>

